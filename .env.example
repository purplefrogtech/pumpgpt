# PumpGPT - Environment Variables (copy to .env and fill)

# --- Telegram Bot ---
BOT_TOKEN=
TELEGRAM_CHAT_IDS=123456789,987654321
VIP_USER_IDS=123456789
DEBUG_MODE=1
DEBUG_LEVEL=DEBUG

# --- Telegram Webhook (optional, otherwise polling is used) ---
WEBHOOK_URL=
WEBHOOK_PORT=8443

# --- Binance API (read-only is fine for simulation) ---
BINANCE_API_KEY=
BINANCE_API_SECRET=

# --- Symbols & Scanner ---
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,ADAUSDT,AVAXUSDT,MATICUSDT,LINKUSDT,DOTUSDT,ATOMUSDT,OPUSDT,ARBUSDT
TIMEFRAME=15m
HTF_TIMEFRAME=1h
SCAN_INTERVAL_SECONDS=60
SCAN_CONCURRENCY=3
THROTTLE_MINUTES=5
STRATEGY_NAME=PumpGPT Midterm
DEFAULT_LEVERAGE=10

# --- Quality Filter (relaxed to keep signals flowing) ---
MIN_RISK_REWARD=1.2
MIN_RSI=30
MAX_RSI=70
MIN_ATR_PCT=0.000075
MIN_VOLUME_RATIO=1.2
MAX_SPREAD_PCT=0.004
MIN_SUCCESS_RATE=25
VOLUME_SPIKE_THRESHOLD=1.2

# --- Simulator / Risk ---
SIM_EQUITY_USD=10000
SIM_RISK_PER_TRADE_PCT=1.0
SIM_TP1_RATIO_QTY=0.5
SIM_BE_ON_TP1=1
SIM_FEE_BPS=8
SIM_NOTIFY=1

# --- Daily Report ---
DAILY_REPORT_HOUR=23
DAILY_REPORT_MINUTE=59
SIGNALS_DAILY_CSV=signals_daily.csv

# --- Test signal ---
TEST_SIGNAL_SYMBOL=BTCUSDT
TEST_SIGNAL_TIMEFRAME=15m
